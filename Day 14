#include <iostream>
#include <string>
#include <unordered_map>
using namespace std;

long long countAtMostK(string s, int k) {
    int n = s.size();
    long long ans = 0;
    unordered_map<char, int> freq;
    int left = 0;

    for (int right = 0; right < n; right++) {
        freq[s[right]]++;

        while ((int)freq.size() > k) {
            freq[s[left]]--;
            if (freq[s[left]] == 0) {
                freq.erase(s[left]);
            }
            left++;
        }

        ans += (right - left + 1); // all substrings ending at right
    }
    return ans;
}

long long substrCountExactlyK(string s, int k) {
    if (k == 0) return 0;
    return countAtMostK(s, k) - countAtMostK(s, k - 1);
}

int main() {
    string s;
    int k;
    cin >> s >> k;
    cout << substrCountExactlyK(s, k) << endl;
    return 0;
}
